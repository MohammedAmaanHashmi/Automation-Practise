<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestNG Regression Suite" thread-count="3"
	parallel="tests" verbose="4">
	<test name="Google Test">
		<parameter name="url" value="https://www.google.com" />
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="myTests.GoogleTest" />
		</classes>
	</test>

	<test name="OpenCart Test">

		<parameter name="url"
			value="https://naveenautomationlabs.com/opencart/" />
		<parameter name="browser" value="firefox" />

		<classes>
			<class name="myTests.OpenCartTest" />
		</classes>
	</test>

	<test name="Orange HRM Test">

		<parameter name="url"
			value="https://www.orangehrm.com/orangehrm-30-day-trial/" />
		<parameter name="browser" value="edge" />
		<classes>
			<class name="myTests.OrangeHRMTest" />
		</classes>
	</test>

</suite>